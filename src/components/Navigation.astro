---
const currentPath = Astro.url.pathname;
---

<nav class="fixed w-full bg-white/90 backdrop-blur-sm shadow-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-gradient-to-r from-[#FF5C35] to-[#D74697] rounded-lg"></div>
          <span class="text-xl font-bold bg-gradient-to-r from-[#FF5C35] to-[#D74697] text-transparent bg-clip-text">
            AuthFlow
          </span>
        </a>
      </div>
      <div class="hidden sm:flex sm:items-center sm:space-x-8">
        <a 
          href="/" 
          class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
            currentPath === "/" 
              ? "text-[#FF5C35]" 
              : "text-gray-600 hover:text-[#FF5C35]"
          }`}
        >
          Home
        </a>
        <a 
          href="/login" 
          class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${
            currentPath === "/login" 
              ? "text-[#FF5C35]" 
              : "text-gray-600 hover:text-[#FF5C35]"
          }`}
        >
          Login
        </a>
        <a 
          href="/register" 
          class="px-4 py-2 rounded-md text-sm font-medium text-white bg-gradient-to-r from-[#FF5C35] to-[#D74697] hover:opacity-90 transition-opacity"
        >
          Get Started
        </a>
      </div>
      <div class="flex items-center sm:hidden">
        <button id="mobile-menu-button" class="text-gray-600 hover:text-[#FF5C35]">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <div id="mobile-menu" class="hidden sm:hidden bg-white/90 backdrop-blur-sm">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <a 
        href="/" 
        class={`block px-3 py-2 rounded-md text-base font-medium ${
          currentPath === "/" 
            ? "text-[#FF5C35]" 
            : "text-gray-600 hover:text-[#FF5C35]"
        }`}
      >
        Home
      </a>
      <a 
        href="/login" 
        class={`block px-3 py-2 rounded-md text-base font-medium ${
          currentPath === "/login" 
            ? "text-[#FF5C35]" 
            : "text-gray-600 hover:text-[#FF5C35]"
        }`}
      >
        Login
      </a>
      <a 
        href="/register" 
        class="block px-3 py-2 rounded-md text-base font-medium text-white bg-gradient-to-r from-[#FF5C35] to-[#D74697]"
      >
        Get Started
      </a>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>