  {
    title: "Supabase Authentication",
    description: "Secure user authentication powered by Supabase, handling login, registration, and session management.",
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z",
    color: "FF5C35"
  },
  {
    title: "MongoDB Storage",
    description: "Efficient user data management with MongoDB, storing profiles and application-specific information.",
    icon: "M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4",
    color: "D74697"
  },
  {
    title: "SSR Protection",
    description: "Server-side rendering with built-in route protection, ensuring secure access to protected content.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
